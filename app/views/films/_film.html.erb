<div class="box">
		<%= link_to (image_tag film.film (:medium)), film %>
	<p class="description">
		<%= film.description %>
	</p>
		<p>
			<strong>
				Posted by <%= film.user.name %>
			</strong>
	</p>
	<p>
		<% if current_user == film.user %>
			<%= link_to 'Edit', edit_film_path(film) %>
			<%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
	<% end %>
</div>